{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("aanimation\\arhamplugin\\assetbundles\\arhamplugin\\ArhamPluginAsset") %}
{% do view.registerAssetBundle("aanimation\\arhamplugin\\assetbundles\\arhamcpsection\\ArhamCPSectionAsset") %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "https://github.com/craft3pluginbase/arham-plugin/blob/master/README.md" %}

{# The title of this CP section #}
{% set title = "ArhamPlugin" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('arham-plugin') %}

{# Get a URL to an image in our AssetBundle #}
{% set iconUrl = view.getAssetManager().getPublishedUrl('@aanimation/arhamplugin/assetbundles/arhamcpsection/dist', true) ~ '/img/Arham-icon.svg' %}

{# Content that should appear in the page header#}
{% set extraPageHeaderHtml %}
    <div class="buttons">
        <a href="{{ pluginCpUrl }}" class="btn submit add icon">{{ "Click Me!"|t('arham-plugin') }}</a>
    </div>
{% endset %}

{# The content of the CP Section#}
{% set content %}
    <h2>{{ "Arham CP Section body goes here"|t('arham-plugin') }}</h2>
    <img src="{{ iconUrl }}" height="64" width="64" />
    <p class="textline"></p>
{% endset %}
